{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2 class="mb-0"><i class="bi bi-box-seam"></i> {{ product.name }}</h2>
                <div>
                    {% if product.status == 'disponible' %}
                        <span class="badge bg-success fs-6">Disponible</span>
                    {% elseif product.status == 'agotado' %}
                        <span class="badge bg-warning fs-6">Agotado</span>
                    {% else %}
                        <span class="badge bg-danger fs-6">Descontinuado</span>
                    {% endif %}
                </div>
            </div>
            <div class="card-body">
                <h5>Descripción</h5>
                <p class="text-muted">{{ product.description }}</p>
                
                <div class="row mt-4">
                    <div class="col-md-6">
                        <h6><i class="bi bi-currency-dollar"></i> Precio</h6>
                        <p class="fs-4 text-success fw-bold">${{ product.price|number_format(2) }}</p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="bi bi-boxes"></i> Stock Disponible</h6>
                        <p class="fs-4 fw-bold">
                            {% if product.stock > 10 %}
                                <span class="text-success">{{ product.stock }}</span>
                            {% elseif product.stock > 0 %}
                                <span class="text-warning">{{ product.stock }}</span>
                            {% else %}
                                <span class="text-danger">{{ product.stock }}</span>
                            {% endif %}
                            unidades
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-tools"></i> Acciones</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar Producto
                    </a>
                    <form method="post" action="{{ path('product_delete', {'id': product.id}) }}" 
                          onsubmit="return confirm('¿Estás seguro de eliminar este producto?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                        <button class="btn btn-danger w-100">
                            <i class="bi bi-trash"></i> Eliminar Producto
                        </button>
                    </form>
                    <a href="{{ path('product_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a Lista
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-info-circle"></i> Información</h6>
            </div>
            <div class="card-body">
                <small class="text-muted">
                    <strong>Creado:</strong> {{ product.createdAt|date('d/m/Y H:i') }}<br>
                    <strong>Última actualización:</strong> {{ product.updatedAt|date('d/m/Y H:i') }}<br>
                    <strong>ID:</strong> {{ product.id }}
                </small>
            </div>
        </div>
    </div>
</div>
{% endblock %}
